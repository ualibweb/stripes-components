{
  "compilerOptions": {
    // allow assuming any
    "noImplicitAny": false,
    // allow importing things like React
    "esModuleInterop": true,
    // JSX is react-flavored
    "jsx": "react",
    // module resolution strategies
    "lib": ["esnext"],
    "module": "es6",
    "moduleResolution": "node",
  }
}
